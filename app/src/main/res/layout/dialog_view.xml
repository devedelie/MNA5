<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogContent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/topTitle"
        android:gravity="center"
        android:textColor="@color/GeneralText"
        android:textSize="18sp"
        android:background="@color/design_default_color_primary"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:id="@+id/text_dialog"
        android:layout_below="@+id/topTitle"
        android:layout_marginTop="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:id="@+id/text_dialog_2"
        android:layout_below="@+id/text_dialog"
        android:layout_marginTop="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:id="@+id/text_dialog_3"
        android:layout_below="@+id/text_dialog_2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:textColor="#ff000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_dialog_3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/btn_dialog"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff"
            android:shadowColor="@color/primaryText"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



</RelativeLayout>